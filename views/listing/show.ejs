<%- layout("/layouts/boilerplate") %>

    <body>

        <div class="row mt-3 ">

            <div class="col-8 offset-3">
                <h3>Listing Details</h3>
            </div>

            <div class="card show-card col-6 offset-3">
                <img src="<%=listing.image%>" class="show-img  card-img-top" alt="listing img">
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%=listing.title%>
                        </b> <br>
                        <i>
                            <%=listing.description%>
                        </i> <br>
                        &#x20B9; <%=listing.price.toLocaleString("en-IN")%> <br>
                            <%=listing.location%> <br>
                                <%=listing.country%> <br>
                    </p>
                </div>
            </div>

            <br>

            <div class="btns">
                <a href="/listings/<%=listing._id%>/edit" class="edit-btn btn btn-dark col-1 offset-3">Edit</a>
                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE"><button
                        class="btn btn-dark offset-6">Delete</button></form>
            </div>
        </div>
    </body>

    <!-- 
    title, description, price, location, country
 -->